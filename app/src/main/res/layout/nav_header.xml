<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="176dp" android:background="@color/colorAccent"
    android:gravity="bottom" android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewMenuProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        android:onClick="OnClick_ProfileImage"/>

    <TextView
        android:id="@+id/textViewMenuUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Username"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>
    <TextView
        android:id="@+id/textViewMenuEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="emailhere@somemail.com"/>



</LinearLayout>