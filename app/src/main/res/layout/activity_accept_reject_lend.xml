<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AcceptRejectLendActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcceptRejectLendEmail">

        <fragment
            android:id="@+id/mapHandoff2"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAcceptRejectLendEmail"
            tools:context=".MapsActivity" />
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_barAcceptReject"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textViewAcceptRejectActivityBookTitleStatic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Book Title:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_barAcceptReject" />

    <TextView
        android:id="@+id/textViewAcceptRejectActivityBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Book title"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAcceptRejectActivityBookTitleStatic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAcceptRejectActivityBookTitleStatic"
        app:layout_constraintTop_toTopOf="@+id/textViewAcceptRejectActivityBookTitleStatic" />

    <TextView
        android:id="@+id/textViewAcceptRejectActivityUserRequestingStatic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Requested By:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAcceptRejectLendEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewAcceptRejectActivityUserRequesting" />

    <TextView
        android:id="@+id/textViewAcceptRejectActivityUserRequesting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="username"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAcceptRejectActivityUserRequestingStatic"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcceptRejectActivityBookTitle" />

    <Button
        android:id="@+id/buttonAcceptRejectActivityAcceptRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"
        android:onClick="accept"
        android:text="Accept"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAcceptRejectActivityRejectRequest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonAcceptRejectActivityRejectRequest"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcceptRejectLendEmail" />

    <Button
        android:id="@+id/buttonAcceptRejectActivityRejectRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="reject"
        android:text="Reject"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAcceptRejectActivityAcceptRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcceptRejectLendEmail"
        app:layout_constraintEnd_toStartOf="@+id/buttonAcceptRejectActivityAcceptRequest" />

    <TextView
        android:id="@+id/textViewAcceptRejectLendPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textViewAcceptRejectActivityUserRequestingStatic"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcceptRejectActivityUserRequesting" />

    <TextView
        android:id="@+id/textViewAcceptRejectLendEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAcceptRejectActivityUserRequestingStatic"
        app:layout_constraintTop_toBottomOf="@+id/textViewAcceptRejectLendPhone" />

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="177dp" />

    <EditText
        android:id="@+id/editTexttRejectLendISBN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ISBN"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/buttonAcceptRejectLendScanISBN"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/buttonAcceptRejectLendScanISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/buttonAcceptRejectLentConfirmISBN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTexttRejectLendISBN" />
</android.support.constraint.ConstraintLayout>

